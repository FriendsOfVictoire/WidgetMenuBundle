{% extends 'VictoireCoreBundle:Widget:new.html.twig' %}
{% block body %}
<div id="widget-{{slot}}" class="add-widget">
    <div id="picker-static" class="vic-tab-pane vic-active vic-form-group">
        {{ form_start(form) }}
            <ul class="menus" data-prototype="{{ _self.widget_prototype(form.items.vars.prototype)|e }}">
                <li>
                    {{ form_errors(form) }}
                    {{ form_row(form.name) }}
                    <ul>
                        <div class='vic-form-group'>
                            {% for item in form.items %}
                                <li>
                                    {{ _self.widget_prototype(item, loop.index0) }}
                                </li>
                            {% endfor %}
                        </div>
                        <div class='vic-form-group'>
                            <span><a href="#" onClick="addRow(this);return false;" class="add_menu_link"></a></span>
                        </div>
                    </ul>
                </li>
            </ul>
            {{form_errors(form)}}
            {# Add this line to set the widget as rendered to not display it twice in form_rest #}
            {% do form.items.setRendered %}
            {{form_rest(form)}}
        {{ form_end(form) }}
    </div>
</div>

<script type="text/javascript">
    $vic(document).ready(function() {
        menus = new Array();
        prototype = $vic('ul.menus').attr('data-prototype');
        //for the existing menus, we generate the js menus
        initMenus();
    });
</script>

{% javascripts '@VictoireWidgetMenuBundle/Resources/public/js/menu-linktype.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock body %}

{% macro widget_prototype(form, index) %}
<div class='vic-form-group'>
    {{ form_widget(form.title, {'attr': {'placeholder': form.title.vars.label}}) }}
    {{ form_widget(form.linkType) }}

    {% if index == null and index != 0 %}
        {% set menuId = '__menu_id__' %}
    {% else %}
        {% set menuId = index %}
    {% endif %}
    <span class="page-type">{{ form_widget(form.page) }}</span>
    <span class="url-type" style="display: none;">{{ form_widget(form.url) }}</span>
    <span><a onClick="deleteRow(this);return false;" href="#" class="btn-remove" ><i class="fa fa-trash-o fa-2x"></i></a></span>
    <ul id="menu-{{ menuId }}" data-index="{{ index }}">
        <div class='vic-form-group'>
            {% if form.items is defined %}
                {% for item in form.items %}
                    <li>
                        {{ _self.widget_prototype(item, loop.index0) }}
                    </li>
                {% endfor %}
            {% endif %}
        </div>
        <div class='vic-form-group'>
            <span><a href="#" onClick="addRow(this);return false;" class="add_menu_link"></a></span>
        </div>
    </ul>
    {{ form_rest(form) }}
</div>
{% endmacro %}

